<Window x:Class="FinalProject_OOD_2022.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalProject_OOD_2022"
        mc:Ignorable="d"
        Title="Home" Height="506" Width="1016"
        WindowStartupLocation="CenterOwner"
         Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      Loaded="Window_Loaded">
    <Window.Resources>
        <DataTemplate x:Key="dataTemplatePet">
            <StackPanel Orientation="Horizontal" Margin="5">
                <Image Source="{Binding Path=Image}" 
                       Width="175"></Image>
                <StackPanel Margin="5">
                    <TextBlock Text="{Binding Path=Name}" 
                               Margin="5"
                               FontSize="12"/>
                    <TextBlock Text="{Binding Path=PetOwnerLName}" 
                               Margin="5"
                               FontSize="12"/>
                    <TextBlock Text="{Binding Path=DOB}" 
                               Margin="5"
                               FontSize="12"/>
                    <TextBlock Text="{Binding Path=GenderType}" 
                               Margin="5"
                               FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="AppointmentInformation">
            <TextBlock>
                <TextBlock.Text>
                    <MultiBinding StringFormat=" {0}:  {1} {2} {3} ">
                        <Binding Path = "Appointment_PathWay"/>
                        <Binding Path = "Date"/>
                        <Binding Path = "Time"/>
                        <Binding Path = "Status"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
        </DataTemplate>
        
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0"  Margin="20 20">
                <Button Margin="0 10" Height="40" Click="Appointment_Btn">New Appointment</Button>
                <Button Margin="0 10" Height="40">New Patient</Button>
                <Button Margin="0 10" Height="40" Click="ViewAllBills">View Bill</Button>
                <Button Margin="0 10" Height="40" Click="Btn_Display_Patient">View Patient</Button>
                <Button Margin="0 10" Height="40"  Click="Button_Click_1">View Appointment</Button>
                <Button Margin="0 20" Height="29" Width="76" Background="#FFF78F8F"  Click="Button_Click">Exit</Button>
            </StackPanel>
        </Grid>

        <!--View Patient--> 
        <Grid Margin="10" Grid.Column="1" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Label Content="Pet Type" Grid.Row="0" Grid.Column="0"/>
            <ComboBox Name="PetType" Grid.Column="0" Grid.Row="0"/>
            <ListBox Name="lbxPet" Grid.Row="1" Grid.RowSpan="3" Grid.Column="0" SelectionChanged="blxPetChanged" />
            <ListView x:Name="lblPetDetails" 
                      HorizontalAlignment="Left"
                       Grid.Row="1" 
                       Grid.Column="1" 
                      ItemTemplate="{StaticResource dataTemplatePet}"/>
            <Label Content="Appintment Details" Grid.Row="2" Grid.Column="1"/>
            <ListView x:Name="Tbx_AppointmentDetails" 
                       Grid.Row="3" 
                       Grid.Column="1" 
                      ItemTemplate="{StaticResource AppointmentInformation}"/>
            
        </Grid>
        
        
    </Grid>
</Window>

    
    