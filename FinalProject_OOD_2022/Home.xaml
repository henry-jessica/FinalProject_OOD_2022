<Window x:Class="FinalProject_OOD_2022.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalProject_OOD_2022"
        mc:Ignorable="d"
        Title="Home" Height="506" Width="1016"
        WindowStartupLocation="CenterOwner"
      
         Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      Loaded="Window_Loaded">


    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0"  Margin="20 20">
                <Button Margin="0 10" Height="40" Click="Appointment_Btn">New Appointment</Button>
                <Button Margin="0 10" Height="40">New Patient</Button>
                <Button Margin="0 10" Height="40" Click="ViewAllBills">View Bill</Button>
                <Button Margin="0 10" Height="40" Click="Btn_Display_Patient">View Patient</Button>
                <Button Margin="0 10" Height="40"  Click="Button_Click_1">View Appointment</Button>
                <Button Margin="0 20" Height="29" Width="76" Background="#FFF78F8F"  Click="Button_Click">Exit</Button>
            </StackPanel>
            <StackPanel Grid.Column="1">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20*"/>
                            <RowDefinition Height="50*"/>
                            <RowDefinition Height="30*"/>
                         </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ListBox Grid.Row="1" Grid.Column="0" Margin="10" Name="lbxPatient" 
                             SelectionChanged="lbxPatient_SectionChanged"/>
                    <ListBox Grid.Row="1" Grid.Column="1" Margin="10"
                             Name="lbxBills" SelectionChanged="lbxBills_SelectionChanged"/>

                    <DataGrid Margin="10" 
                              Height="400" 
                              Grid.Row="3" Grid.Column="0" x:Name="BillDetails" 
                              Grid.ColumnSpan="2"/>
                </Grid>

                <!--</Grid>-->

            </StackPanel>
        </Grid>
    </Grid>
</Window>

    
    